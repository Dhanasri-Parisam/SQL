ðŸ”¹ Basic SQL Example

-- Create a table
CREATE TABLE Students (
    id INT PRIMARY KEY,
    name VARCHAR(50),
    age INT
);

-- Insert data
INSERT INTO Students (id, name, age)
VALUES (1, 'Alice', 22);

-- Retrieve data
SELECT * FROM Students WHERE age > 20;
